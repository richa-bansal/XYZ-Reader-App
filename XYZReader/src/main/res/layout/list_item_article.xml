    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_side_margin"
        android:layout_marginRight="@dimen/list_side_margin"
        android:layout_marginTop="@dimen/list_item_top_margin"
        android:layout_marginBottom="@dimen/list_item_bottom_margin"
        android:orientation="horizontal"
        >

        <!--suppress AndroidLintContentDescription -->
        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:background="@color/photo_placeholder"
            android:transitionName="@string/shared_element_transition"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/article_title"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:alpha=".87"
                android:fontFamily="sans-serif"
                android:paddingLeft="16dp"
                android:paddingBottom="@dimen/margin_between_title_subtitle"
                android:ellipsize="end"
                android:maxLines="2" />

            <TextView
                android:id="@+id/article_subtitle"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:textColor="@color/Black"
                android:alpha=".54"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end" />
        </LinearLayout>
    </LinearLayout>


